<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splash"
    tools:context=".SplashActivity"
    android:layoutDirection="ltr">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/hesabe_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="22dp"
            android:src="@mipmap/logo_hesabe" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/hesabe_logo"
            android:layout_marginStart="22dp"
            android:layout_marginTop="2dp"
            android:text="@string/online_payment_service"
            android:textColor="#9795A8"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/iv_blue_theme"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="-14dp"
            android:layout_marginBottom="-122dp"
            android:src="@drawable/bg_blue_theme" />

    </RelativeLayout>

</FrameLayout>